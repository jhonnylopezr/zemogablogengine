@model Zemoga.BlogEngine.Web.Models.BlogPosts.PostCommentsViewModel

@{ 
    Layout = null;
}

<ul class="media-list">
    @foreach (var item in Model.Comments)
    {
        <li class="media">
            <div class="media-body">
                <h4 class="media-heading">@item.AuthorName | @item.CreatedOn.ToString()</h4>
                @item.Comment
            </div>
        </li>
    }

</ul>

